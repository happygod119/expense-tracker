<div class="row">
  <div class="col-md-6 m-auto">
    <div class="row mt-5">
      <div class="mt-3 row justify-content-center">
        <label class="col-2"><span class="text-danger">*</span>必填欄位</label>
        <h4 class="col-4 text-center">請修改你的支出</h4>
      </div>
    </div>

    <form action="/records/{{record._id}}?_method=put" method="post" class="col-6 mx-auto mt-4">
      <div class="mt-5 row justify-content-center">
        <label for="name" class="col-4 col-form-label text-end px-0">
          <span class="text-danger">*</span>
          名稱：
        </label>
        <div class="col-8">
          <input type="text" class="form-control" id="name" name="name" value="{{record.name}}" required>
        </div>
      </div>

      <div class="mt-5 row justify-content-center">
        <label for="date" class="col-4 col-form-label text-end px-0">
          <span class="text-danger">*</span>
          日期：
        </label>
        <div class="col-8">
          <input type="date" class="form-control" id="date" name="date" value="{{record.date}}" required>
        </div>
      </div>

      <div class="mt-5 row justify-content-center">
        <label for="category" class="col-4 col-form-label text-end px-0">
          <span class="text-danger">*</span>
          類別：
        </label>
        <div class="col-8">
          <select class="form-select" aria-label="Default select example" name="categoryId" required>
            <option value="{{selected._id}}" selected>{{selected.name}}</option>
            {{#each category}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>
      </div>

      <div class="mt-5 row justify-content-center">
        <label for="amount" class="col-4 col-form-label text-end px-0">
          <span class="text-danger">*</span>
          金額：
        </label>
        <div class="col-8">
          <input type="number" class="form-control" id="amount" min="0" name="amount" value="{{record.amount}}"
            required>
        </div>
      </div>

      <div class="text-end mt-5">
        <button type="submit" class="btn btn-warning col-6 me-4">送出</button>
      </div>
    </form>
  </div>
</div>