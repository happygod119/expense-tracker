<div class="card m-3 text-center">
  <div class="row">
  <div class="col-md-6 m-auto">
    <div class="row mt-5">
      <div class="mt-3 row justify-content-center">
        <label class="col-3"><span class="text-danger">*</span>必填欄位</label>
        <h4 class="col-6 text-center">請修改你的支出</h4>
      </div>
    </div>

    <form action="/records" method="post" class="col-6 mx-auto mt-4">
      <div class="mt-5 row justify-content-center">
        <label for="name" class="col-4 col-form-label text-end px-0">
          <span class="text-danger">*</span>
          名稱：
        </label>
        <div class="col-8">
          <input type="text" class="form-control" id="name" name="name" required>
        </div>
      </div>

      <div class="mt-5 row justify-content-center">
        <label for="date" class="col-4 col-form-label text-end px-0">
          <span class="text-danger">*</span>
          日期：
        </label>
        <div class="col-8">
          <input type="date" class="form-control" id="date" name="date" required>
        </div>
      </div>

      <div class="mt-5 row justify-content-center">
        <label for="category" class="col-4 col-form-label text-end px-0">
          <span class="text-danger">*</span>
          類別：
        </label>
        <div class="col-8">
          <select class="form-select" aria-label="Default select example" name="categoryId" required>
            <option value="" selected>請選擇類別</option>
            {{#each category}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>
      </div>

      <div class="mt-5 row justify-content-center">
        <label for="amount" class="col-4 col-form-label text-end px-0">
          <span class="text-danger">*</span>
          金額：
        </label>
        <div class="col-8">
          <input type="number" class="form-control" id="amount" name="amount" min="0" required>
        </div>
      </div>

      <div class="text-end mt-3">
        <button class="btn btn-primary col-6 me-4">新增支出</button>
      </div>
    </form>
  </div>
</div>
</div>
